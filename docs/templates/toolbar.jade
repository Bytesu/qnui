            li.active
              a(href='#')
                i.sui-icon.icon-pc-list
                | &nbsp;日志
            li
              a(href='#')
                i.sui-icon.icon-pc-settings
                | &nbsp;设置
            li.sui-dropdown
              a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' data-trigger='hover')
                i.sui-icon.icon-pc-question-circle
                | &nbsp;帮助
              ul.sui-dropdown-menu(role='menu')
                li(role="presentation")
