extends base

block title
  title 导航栏

block sidebar
  +sidebar('navbar')

block content

  h1 导航栏

  h2.sui-page-header 开发者文档

  ul.sui-nav.nav-tabs.nav-large
    li.active
      a(href='#demo1', data-toggle='tab') 示例
    li
      a(href='#code1', data-toggle='tab') 代码
    li
      a(href='#doc1', data-toggle='tab') 文档

  div.tab-content
    div.tab-pane.active#demo1
      h3 简单的导航条
      div.sui-navbar
        div.navbar-inner
          a.sui-brand(href='#') SUI
          ul.sui-nav
            li.active
              a(href='#') 首页
            li
              a(href='#') 组件
            li
              a(href='#') 关于

      h3 只有链接
      div.sui-navbar
        div.navbar-inner
          ul.sui-nav
            li.active
              a(href='#') 首页
            li
              a(href='#') 组件
            li
              a(href='#') 关于

      h3 带表单
      div.sui-navbar
        div.navbar-inner
          ul.sui-nav
            li.active
              a(href='#') 首页
            li
              a(href='#') 组件
            li
              a(href='#') 关于

          form.sui-form.navbar-form.pull-right
            input(type='text' placeholder='宝贝/店铺名称...')
            button.sui-btn 搜索

      h3 带下拉菜单
      div.sui-navbar
        div.navbar-inner
          ul.sui-nav
            li.active
              a(href='#') 首页
            li
              a(href='#') 组件
            li.sui-dropdown
              a(href='javascript:void(0);' data-toggle='dropdown') 其他 <i class="caret"></i>
              ul.sui-dropdown-menu(role='menu')
                li(role="presentation")
                  a(role="menuitem" tabindex="-1" href="#") 关于
                li(role="presentation")
                  a(role="menuitem" tabindex="-1" href="#") 项目组成员
                li(role="presentation")
                  a(role="menuitem" tabindex="-1" href="#") 版权



    div.tab-pane#code1
      pre.prettyprint.linenums(data-target='#demo1>div')
    div.tab-pane#doc1
  ul.demo-operations.clearfix
    li
      a.copy-btn(href='javascript:void(0)', data-target='#demo1>div') 复制代码

